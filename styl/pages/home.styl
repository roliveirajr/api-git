.home-page
    background-color color5
    position absolute
    width 100%
    margin 0 auto
    height 100%
    

#search-profiles
    h1
        color color2
        font-size 40px
        margin-top 0
        margin-bottom 10px
    input
        padding 10px 10px 10px 25px
        border solid 1px color1
        border-radius 20px 0px 0px 20px
        font-size 25px
        width 320px
    button
        background-color color4
        border solid 1px color1
        color color2
        padding 10px 30px
        cursor pointer
        margin-left -5px
        transition transform .2s cubic-bezier(0.5, 0.49, 0.51, 0.5)
        border-radius 0px 20px 20px 0px
        font-size 25px
        &hover
            transition transform .2s cubic-bezier(0.5, 0.49, 0.51, 0.5)
            transform scale(1.1)

.cont-resultuser
    display none
    opacity 0
    color color1
    background-color #969696
    border solid 1px color1
    padding 10px 15px
    transition all 1s ease
    border-radius 19px
    margin-top 10px
    max-width 530px
    p
        margin-top 0
        margin-bottom 6px
        font-weight bold
        span
            font-weight normal
    img,
    .infos-user
        display inline-block
        vertical-align top
        text-align right
    img
        width 29%
        margin-right 10px
    .infos-user
        padding-top 10px
        width 60%
        a
            text-decoration none
            color color2
            background-color color4
            padding 8px 15px
            display block
            max-width 90px
            text-align center
            font-weight bold
            margin-top 15px
            margin-left auto


.repo-list
    border solid 1px color1
    padding 10px
    margin-top 20px

.order-by
    text-align center
    a
        display inline-block
        text-align center
        cursor pointer
        &.more-stars
            &::after
                content ""
                width 1.5px
                height 20px
                background-color color1
                display inline-block
                margin-left 10px
                margin-right 5px
                position relative
                top 4px
.repos
    .repo-list
        text-align: left 
        p
            display inline
        span
            display inline-block
            width 120px
            float right
            margin-top -4px
            text-align: right

.search-complete
    .cont-resultuser
        display block
        opacity 1
        transition all 1s ease